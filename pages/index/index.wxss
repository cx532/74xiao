page{
  background-color: #f0f0f0;
}
swiper{
  height:320rpx;
}
swiper image{
  width: 750rpx;
  height: 320rpx;
}
.title{
  font-size: 28rpx;
  clear: #3c3c3c;
  font-weight: 500;
  line-height: 1;
  padding: 20rpx 30rpx;
}
.item{
  margin-bottom: 20rpx;
}
.item image{
  width: 750rpx;
  height: 320rpx;
}
.item .info{
  height: 180rpx;
  padding: 16rpx 130rpx 20rpx 30rpx;
  /* background-color: pink; */
  position: relative;
  box-sizing: border-box;
  background-color: #fff;
  /* vertical-align: middle; */
}
.item .name{
  font-size: 30rpx;
  color: #3c3c3c;
}
.item .extra{
  font-size: 22rpx;
  color: #848484;
  position: absolute;
  bottom: 20rpx;
}
.item .extra text{
  margin-right: 60rpx;
}
.item .status{
  position: absolute;
  right: 30rpx;
  top: 16rpx;
  font-size: 30rpx;
  color: #FE6249;
}
